<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:background="@drawable/item_back"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/righteous"
        android:layout_marginTop="19dp"
        android:layout_marginStart="8dp"
        android:text="CENTER ID"
        android:textColor="#0B0B0B"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:textColor="#0B0B0B"
        android:text="11123"
        android:layout_marginTop="19dp"
        android:layout_marginStart="10dp"
        android:id="@+id/centre_id"
        app:layout_constraintStart_toEndOf="@+id/textView"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:text="Name"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:id="@+id/textView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textColor="#0B0B0B"
        android:text="CMC VELLORE"
        android:fontFamily="@font/righteous"
        android:layout_marginTop="13dp"
        android:layout_marginStart="45dp"
        android:id="@+id/centre_name_id"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        android:layout_marginLeft="45dp"
        app:layout_constraintTop_toBottomOf="@+id/centre_id"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:text="Address"
        android:layout_marginTop="9dp"
        android:layout_marginStart="8dp"
        android:id="@+id/textView5"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/centre_name_id"
        android:textColor="#0B0B0B"
        android:text="Dhanbad"
        android:fontFamily="@font/righteous"
        android:layout_marginTop="11dp"
        android:id="@+id/adress_id"
        app:layout_constraintTop_toBottomOf="@+id/centre_name_id"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="State"
        android:layout_marginTop="9dp"
        android:layout_marginStart="8dp"
        android:id="@+id/textView7"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/adress_id"
        android:textColor="#0B0B0B"
        android:text="TextView"
        android:fontFamily="@font/righteous"
        android:layout_marginTop="8dp"
        android:id="@+id/state_id"
        app:layout_constraintTop_toBottomOf="@+id/adress_id"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="District"
        android:layout_marginTop="11dp"
        android:layout_marginStart="9dp"
        android:id="@+id/textView9"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/state_id"
        android:textColor="#0B0B0B"
        android:text="TextView"
        android:fontFamily="@font/righteous"
        android:layout_marginTop="12dp"
        android:id="@+id/district_id"
        app:layout_constraintTop_toBottomOf="@+id/state_id"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Pincode"
        android:layout_marginTop="12dp"
        android:layout_marginStart="9dp"
        android:id="@+id/textView11"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/district_id"
        android:textColor="#0B0B0B"
        android:text="TextView"
        android:fontFamily="@font/righteous"
        android:layout_marginTop="11dp"
        android:id="@+id/pincode_id"
        app:layout_constraintTop_toBottomOf="@+id/district_id"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:textColor="#090808"
        android:text="Availbility"
        android:layout_marginTop="15dp"
        android:layout_marginStart="9dp"
        android:id="@+id/textView13"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/pincode_id"
        android:textSize="18sp"
        android:textColor="#0EC916"
        android:text="01"
        android:fontFamily="@font/righteous"
        android:layout_marginTop="12dp"
        android:id="@+id/current_vaccine_id"
        app:layout_constraintTop_toBottomOf="@+id/pincode_id"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Vaccine"
        android:layout_marginTop="9dp"
        android:layout_marginStart="9dp"
        android:id="@+id/textView15"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/current_vaccine_id"
        android:textColor="#0B0B0B"
        android:text="Covidshield"
        android:fontFamily="@font/righteous"
        android:layout_marginTop="8dp"
        android:id="@+id/type_vaccine_id"
        app:layout_constraintTop_toBottomOf="@+id/current_vaccine_id"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Type"
        android:layout_marginTop="14dp"
        android:layout_marginStart="9dp"
        android:id="@+id/textView17"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView15"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/type_vaccine_id"
        android:textColor="#0B0B0B"
        android:text="TextView"
        android:fontFamily="@font/righteous"
        android:layout_marginTop="17dp"
        android:id="@+id/type_id"
        app:layout_constraintTop_toBottomOf="@+id/type_vaccine_id"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Date"
        android:layout_marginTop="8dp"
        android:layout_marginStart="9dp"
        android:id="@+id/textView19"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="3dp"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/type_id"
        android:textColor="#0B0B0B"
        android:text="TextView"
        android:fontFamily="@font/righteous"
        android:layout_marginTop="8dp"
        android:id="@+id/date_id"
        app:layout_constraintTop_toBottomOf="@+id/type_id"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="3dp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:id="@+id/animationView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="22dp"
        app:lottie_rawRes="@raw/vaccine"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>